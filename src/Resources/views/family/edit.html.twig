{% trans_default_domain 'UserAdmin' %}

{% extends 'kookaburra.html.twig' %}

{% form_theme form
    'form/kookaburra_form.html.twig'
%}

{% set module = {'baseURL': 'user_admin', 'crumbs': [{uri: 'user_admin__manage', name: 'People Admin'},{uri: 'user_admin__family_manage', name: 'Manage Families'}], title: 'Edit Family', domain: 'UserAdmin'} %}
{% set breadcrumbs = 'new' %}
{% set moduleName = 'UserAdmin' %}

{% set family = form.vars.value %}

{% block content %}
    {{ form_start(form) }}
    <table class="smallIntBorder fullWidth standardForm relative">
        {{ form_row(form.general) }}
        {{ form_row(form.name) }}
        {{ form_row(form.status) }}
        {{ form_row(form.languageHomePrimary) }}
        {{ form_row(form.languageHomeSecondary) }}
        {{ form_row(form.nameAddress) }}
        {{ form_row(form.homeAddress) }}
        {{ form_row(form.homeAddressDistrict) }}
        {{ form_row(form.homeAddressCountry) }}
        {{ form_row(form.submit) }}
    </table>
    {{ form_end(form) }}

    {% include '@KookaburraUserAdmin/family/relationships.html.twig'  %}
    {% include '@KookaburraUserAdmin/family/children.html.twig'  %}
{% endblock content %}
